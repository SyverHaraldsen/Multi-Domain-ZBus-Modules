menuconfig MDM_BLE_NUS
	bool "BLE NUS module"
	help
	  Enable BLE NUS module.
	  Note: Cannot be used simultaneously with Channel Sounding module due to
	  BLE role conflicts (BLE NUS requires peripheral, Channel Sounding requires
	  central-only mode).

if MDM_BLE_NUS

config MDM_BLE_NUS_RUNNER
	bool "Module is running on this image"
	default n
	depends on BT
	depends on BT_NUS
	help
	  Select if this module is running on this image.

endif # MDM_BLE_NUS
